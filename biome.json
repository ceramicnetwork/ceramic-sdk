{
  "$schema": "https://biomejs.dev/schemas/1.7.1/schema.json",
  "organizeImports": {
    "enabled": true,
    "ignore": ["lib/**"]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "ignore": ["lib/**"],
    "indentStyle": "space",
    "lineWidth": 80
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "quoteProperties": "asNeeded",
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "trailingComma": "all"
    }
  },
  "linter": {
    "enabled": true,
    "ignore": ["lib/**"],
    "rules": {
      "recommended": true
    }
  }
}
