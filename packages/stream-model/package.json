{
  "name": "@ceramic-sdk/stream-model",
  "version": "0.1.0",
  "author": "3Box Labs",
  "license": "(Apache-2.0 OR MIT)",
  "keywords": ["ceramic", "stream"],
  "repository": {
    "type": "git",
    "url": "https://github.com/ceramicstudio/ceramic-sdk",
    "directory": "packages/stream-model"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": ["dist"],
  "engines": {
    "node": ">=20"
  },
  "sideEffects": false,
  "scripts": {
    "build:clean": "del dist",
    "build:js": "swc src -d ./dist --config-file ../../.swcrc --strip-leading-paths",
    "build:types": "tsc --project tsconfig.json --emitDeclarationOnly --skipLibCheck",
    "build": "pnpm build:clean && pnpm build:types && pnpm build:js",
    "lint": "eslint src --fix",
    "test": "node --experimental-vm-modules ../../node_modules/jest/bin/jest.js",
    "test:ci": "pnpm run test --ci --coverage",
    "prepare": "pnpm build",
    "prepublishOnly": "package-check"
  },
  "dependencies": {
    "@ceramicnetwork/codecs": "^4.9.0",
    "@didtools/cacao": "^3.0.1",
    "@ipld/dag-cbor": "^9.2.0",
    "ajv": "^8.13.0",
    "ajv-formats": "^3.0.1",
    "codeco": "^1.2.1",
    "json-ptr": "^3.1.1"
  },
  "devDependencies": {
    "@ceramic-sdk/types": "workspace:^",
    "@ceramicnetwork/streamid": "^4.1.0",
    "json-schema-typed": "^8.0.1"
  },
  "jest": {
    "extensionsToTreatAsEsm": [".ts"],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.(t|j)s$": [
        "@swc/jest",
        {
          "root": "../.."
        }
      ]
    }
  }
}
